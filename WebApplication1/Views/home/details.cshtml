@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/no-image.png" />
                <h4>Employee Id :@Model.employee.Id</h4>
                <h4> Email : @Model.employee.Email</h4>
                <h4> Department : @Model.employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="index" class="btn btn-primary m-1">Back</a>
                <a href="#" class="btn btn-primary m-1"">Edit</a>
                <a href="#" class="btn btn-danger m-1"">Delete</a>
            </div>
        </div>
    </div>
</div>
